{
  "name": "saasify",
  "private": true,
  "author": "Saasify <dev@saasify.sh>",
  "repository": "saasify-sh/saasify",
  "license": "MIT",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "docs": "docsify serve docs",
    "deploy": "cd docs && now --prod && now rm --safe --yes saasify || echo 'done'",
    "test": "lerna run test",
    "bootstrap": "lerna bootstrap",
    "publish": "lerna publish",
    "preinstall": "node -e \"if (process.env.npm_execpath.indexOf('yarn') < 0) throw new Error('saasify requires yarn for development')\"",
    "postinstall": "run-s bootstrap"
  },
  "keywords": [
    "faas",
    "saas",
    "lambda",
    "serverless",
    "deploy",
    "saasify",
    "fts"
  ],
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "docsify": "^4.9.4",
    "eslint": "^6.5.1",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.15.0",
    "eslint-plugin-standard": "^4.0.1",
    "lerna": "^3.13.4",
    "npm-run-all": "^4.1.5"
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "semi": false,
    "tabWidth": 2,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always"
  }
}
